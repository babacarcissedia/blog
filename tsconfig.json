{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
